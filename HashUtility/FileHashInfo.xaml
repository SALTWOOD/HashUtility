<UserControl x:Class="HashUtility.FileHashInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HashUtility"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="720">
    <Grid>
        <TextBox x:Name="txtFileName" HorizontalAlignment="Left" Margin="10,0,0,0" Text="" VerticalAlignment="Center" Width="250" Height="18"/>
        <ComboBox x:Name="cmbHashType" HorizontalAlignment="Left" VerticalAlignment="Center" Width="60" Height="18" Margin="265,0,0,0" ItemsSource="{local:EnumBindingSource EnumType=local:HashType}"/>
        <TextBox x:Name="txtHashText" HorizontalAlignment="Left" Margin="330,0,0,0" Text="" VerticalAlignment="Center" Width="380" Height="18"/>

    </Grid>
</UserControl>
